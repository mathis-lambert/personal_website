# Public URLs (compiled into the client bundle at build time)
NEXT_PUBLIC_MAPS_PUBLIC_KEY=changeme
NEXT_PUBLIC_APP_VERSION=dev
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Site metadata
PUBLIC_BASE_URL=https://mathislambert.fr

# Upstream ML API (used by /api/agent)
ML_API_BASE_URL=https://api.mathislambert.fr
ML_API_KEY=changeme
LLM_MODEL_NAME=openai/gpt-oss-120b
ML_API_VECTOR_STORE_ID=mathis_bio_store

# Auth (NextAuth credentials provider)
NEXTAUTH_SECRET=changeme-super-secret
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Database (used for logging/analytics)
MONGODB_URI=mongodb://localhost:27017/personal_website
MONGODB_DB=personal_website
ANALYTICS_LOG_RETENTION_DAYS=180
ANALYTICS_HASH_SALT=changeme-analytics-salt

# Optional local MongoDB bootstrap (used by development/docker-compose.yml)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=changeme
